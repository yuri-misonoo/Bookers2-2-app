<p id="notice"></p>
<div class="containar">
  <div class="row">
    <div class="col-3">

      <%= render 'users/left-bar', user: @book.user, book: @new_book %>

    </div>
    
    <div class="col-8 offset-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <tbody>
          <tr>
            <td><%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %>
                <%= link_to @book.user.name, user_path(@book.user.id) %> 
            </td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <% if @book.user.id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book.id), class:"btn btn-sm btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-sm btn-danger" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  
  </div>
</div>