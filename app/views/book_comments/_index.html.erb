
  <table>
    <% book.book_comments.each do |book_comment| %>
      <tbody>
        <tr>
          <td>
            <%= attachment_image_tag book_comment.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size: "30x30" %><br>
            <%= link_to book_comment.user.name, user_path(book_comment.user.id) %>
          </td>
          <td><%= book_comment.comment %></td>
          <td><%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-danger" %></td>
        </tr>
      </tbody>
    <% end %>
  </table>
