<p id="notice"></p>
<div class="containar">
  <div class="row">
    <div class="col-3">

      <%= render 'users/left-bar', user: @user, book: @book %>

    </div>
    <div class="col-8 offset-1">
      <h2>Users</h2>
      <table class="table table-hover table-in">
        <thread>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thread>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, format: 'jpeg', fallback: 'no_image.jpg', size: "50x50" %></td>
              <td><%= user.name %></td>
              <td><%= link_to "Show", user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>